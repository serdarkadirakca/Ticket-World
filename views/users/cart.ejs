<!DOCTYPE html>
<html lang="en">
<head>

    <%- include("../partials/head") %>

</head>
<body>
    <div class="page-wrapper">
        <header class="header header-2 header-intro-clearance">

            <%- include("../partials/header") %>

        </header><!-- End .header -->

        <main class="main">
            
            <div class="page-header text-center" style="background-image: url('static/images/page-header-bg.jpg')">
                <div class="container">
                    <h1 class="page-title">Shopping Cart</h1>
                </div><!-- End .container -->
            </div><!-- End .page-header -->
            
            <div class="page-content">
                <div class="cart">
                    <div class="container">
                        <div class="row">
                            <div class="col-lg-9">
                                <form method="post"> 
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <table class="table table-cart table-mobile">
                                    <thead>
                                        <tr>
                                            <th>Tickets</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for( let i = 0; i < userProducts.length; i++ ) { %>
                                                <tr>
                                                <td class="product-col">
                                                    <div class="product">
                                                        <figure class="product-media">
                                                            <a href="/<%= userProducts[i].url %>">
                                                                <img src="static/images/products/<%= userProducts[i].image %>" alt="Product image">
                                                            </a>
                                                        </figure>
                
                                                        <h3 class="product-title">
                                                            <a href="/<%= userProducts[i].url %>"><%= userProducts[i].title %></a>
                                                        </h3><!-- End .product-title -->
                                                    </div><!-- End .product -->
                                                </td>
                                                <td class="quantity" style="width:17%; padding-right: 5rem;">
                                                    <input type="number" id="quantity" name="quantity" class="form-control" 
                                                    value="<%= productUsers[i].quantity %>" min="1" max="10" step="1" data-decimals="0" required>
                                                </td>
                                                <td class="total-col"><%= userProducts[i].price %>TL</td>    
                                                <td class="remove-col"><button class="btn-remove" name="submit" id="55" value="<%= userProducts[i].id %>"><i class="icon-close"></i></button></td>                                                
                                            </tr>
                                        <% } %>
                                    </tbody>
                                </table><!-- End .table table-wishlist -->
                                <div class="product-details-action justify-content-end">
                                <button name="submit" id="update" value="update" class="btn btn-primary">UPDATE CART</button>
                                <button name="submit" id="deleteAll" value="deleteAll" class="btn btn-white-primary" style="margin-left: 2rem;">EMPTY CART</button>
                            </div>
                            
                            </div><!-- End .col-lg-9 -->
                            <aside class="col-lg-3">
                                <div class="summary summary-cart">
                                    <h3 class="summary-title">Cart Total</h3><!-- End .summary-title -->
            
                                    <table class="table table-summary">
                                        <tbody>
                                            <% for( let i = 0; i < userProducts.length; i++ ) { %>
                                            <tr class="summary-subtotal">
                                                
                                                <td><%= userProducts[i].title %></td>
                                                <td><%= totalPrice[i] %> TL</td>
                                                
                                            </tr><!-- End .summary-subtotal -->
                                            <% } %>
                                            <tr class="summary-total">
                                                <td>Total:</td>
                                                <td><%= cartTotal %> TL</td>
                                            </tr><!-- End .summary-total -->
                                        </tbody>
                                    </table><!-- End .table table-summary -->
                                </form>
                                    <a href="/checkout" id="checkout" class="btn btn-outline-primary-2 btn-order btn-block">PROCEED TO CHECKOUT</a>
                                </div><!-- End .summary -->
            
                                <a href="/" class="btn btn-outline-dark-2 btn-block mb-3"><span>RETURN TO HOME</span><i class="icon-refresh"></i></a>
                            </aside><!-- End .col-lg-3 -->
                        </div><!-- End .row -->
                    </div><!-- End .container -->
                </div><!-- End .cart -->
            </div><!-- End .page-content -->
            </main><!-- End .main -->
        <footer class="footer footer-2">
            <%- include('../partials/footer') %>
        </footer><!-- End .footer -->
            <!-- Mobile Menu -->
    </div><!-- End .page-wrapper -->
    <button id="scroll-top" title="Back to Top"><i class="icon-arrow-up"></i></button>

    <%- include("../partials/mobile-menu") %>
    <%- include('../partials/script') %>

</body>
</html>